<UserControl x:Class="keyboardWindow.keypadButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:keyboardWindow"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border AllowDrop="True" x:Name="border" Margin="5" Background="Transparent" Width="auto" Height="{Binding RelativeSource={RelativeSource Self}, Path=ActualWidth}" BorderThickness="8" BorderBrush="#cccccc" CornerRadius="20">
            <StackPanel x:Name="functionListView" Margin="3" VerticalAlignment="Center" HorizontalAlignment="Center">
                
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
